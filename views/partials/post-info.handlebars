<div class="card">
    <div class="card-header">
        <h2><a href="/post/{{id}}">{{title}}</a></h2>
        <span>Posted by {{user.username}} on {{format_date created_at}}</span>
        |
        <a href="/post/{{post.id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>    
    </div>
    <div class="card-body">
        {{post_text}}
    </div>
</div>